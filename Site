   OYUNU İNDİR (.ZIP)
</a>
function downloadGame() {
    const zipUrl = 'https://the-scam.zip';
    const link = document.createElement('a');
    link.href = zipUrl;
    link.download = 'the-scam.zip'; // İndirilen dosyanın adı
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
}
